{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
{{/each}}

<div class="card">
    <div class="card-body">
        <h3>Nova postagem</h3>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Titulo da postagem</label>
            <input type="text" name="titulo" class="form-control">
            <label for="slug">Slug</label>
            <input type="text" name="slug" class="form-control">
            <label for="descricao">Descrição</label>
            <input type="text" name="descricao" class="form-control">
            <label for="categorias">Selecine a categoria</label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}" class="form-control">{{nome}}</option>
                    {{else}}
                    <option value="0">Não existem categorias registradas</option>
                {{/each}}
            </select>
            <label for="conteudo">Conteudo da postagem</label>
            <textarea name="conteudo" class="form-control"></textarea>
            <button class="btn btn-success mt-2">Postar!</button>
        </form>
    </div>
</div>