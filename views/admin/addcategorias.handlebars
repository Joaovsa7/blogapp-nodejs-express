{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
{{/each}}
<h2>Nova categoria</h2>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="POST">
            <label for="nome"> Nome da categoria </label>
                <input type="text" name="nome" id="nome" placeholder="Ex: Comidas" class="form-control">
            <label for="slug">Slug: </label>
                <input type="text" name="slug" id="slug" placeholder="Ex: city" class="form-control">
            <button type="submit" class="btn btn-success mt-4">
                Criar categoria
            </button>
        </form>
    </div>
</div>