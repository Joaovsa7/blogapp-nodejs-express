<h2>Lista de categorias</h2>
<hr>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small> <br />
            <small>Date de criação {{date}}</small>
            <a href="/admin/categorias/edit/{{_id}}">
                <button class="btn btn-success">
                    Editar esta categoria
                </button>
            </a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">
                    Deletar categoria
                </button>
            </form>
        </div>
    </div>
    {{else}}
        <h2>Não existe nenhuma categoria</h2>
{{/each}}
<a href="/admin/categorias/add">
    <button class="btn btn-success">Nova categoria</button>
</a>